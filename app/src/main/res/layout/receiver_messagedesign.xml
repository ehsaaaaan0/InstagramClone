<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_height="@dimen/_35mdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/receivermsg_profile"
        android:layout_width="28.60dp"
        android:layout_height="48dp"
        android:maxWidth="@dimen/_200mdp"
        android:minWidth="@dimen/_50mdp"
        android:padding="-7dp"
        android:src="@drawable/profile_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/messagecont_res"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/messagecont_res"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/receiver_bg"
        android:padding="@dimen/_7mdp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="@dimen/_7mdp"
        app:layout_constraintStart_toEndOf="@id/receivermsg_profile"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/receivermessage_"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/receivermsg_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/messagecont_res" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>