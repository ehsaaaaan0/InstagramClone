<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.devlomi.circularstatusview.CircularStatusView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/storyView"
        app:portion_spacing="4dp"
        app:portion_width="2dp"
        app:portions_count="1"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/story_show_user"
        app:layout_constraintStart_toStartOf="@id/story_show_user"
        app:layout_constraintEnd_toEndOf="@id/story_show_user"
        app:layout_constraintBottom_toBottomOf="@id/story_show_user"
     />
    <com.devlomi.circularstatusview.CircularStatusView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/storyView2"
        app:portion_spacing="4dp"
        app:portion_width="2dp"
        app:portions_count="2"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/story_show_user"
        app:layout_constraintStart_toStartOf="@id/story_show_user"
        app:layout_constraintEnd_toEndOf="@id/story_show_user"
        app:layout_constraintBottom_toBottomOf="@id/story_show_user"
        />
    <com.devlomi.circularstatusview.CircularStatusView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/storyView3"
        app:portion_spacing="4dp"
        app:portion_width="2dp"
        app:portions_count="3"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/story_show_user"
        app:layout_constraintStart_toStartOf="@id/story_show_user"
        app:layout_constraintEnd_toEndOf="@id/story_show_user"
        app:layout_constraintBottom_toBottomOf="@id/story_show_user"
        />
    <com.devlomi.circularstatusview.CircularStatusView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/storyView4"
        app:portion_spacing="4dp"
        android:visibility="gone"
        app:portion_width="2dp"
        app:portions_count="4"
        app:layout_constraintTop_toTopOf="@id/story_show_user"
        app:layout_constraintStart_toStartOf="@id/story_show_user"
        app:layout_constraintEnd_toEndOf="@id/story_show_user"
        app:layout_constraintBottom_toBottomOf="@id/story_show_user"
        />
    <com.devlomi.circularstatusview.CircularStatusView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/storyView5"
        app:portion_spacing="4dp"
        app:portion_width="2dp"
        app:portions_count="5"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/story_show_user"
        app:layout_constraintStart_toStartOf="@id/story_show_user"
        app:layout_constraintEnd_toEndOf="@id/story_show_user"
        app:layout_constraintBottom_toBottomOf="@id/story_show_user"
        />
    <com.devlomi.circularstatusview.CircularStatusView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/storyView6"
        app:portion_spacing="4dp"
        app:portion_width="2dp"
        app:portions_count="3"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/story_show_user"
        app:layout_constraintStart_toStartOf="@id/story_show_user"
        app:layout_constraintEnd_toEndOf="@id/story_show_user"
        app:layout_constraintBottom_toBottomOf="@id/story_show_user"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/story_show_user"
        android:layout_width="@dimen/_48mdp"
        android:layout_height="@dimen/_48mdp"
        android:layout_marginStart="12dp"
        android:padding="4dp"
        android:src="@drawable/profile_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="6dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:id="@+id/user_name_story"
        android:textColor="#2E2E2E"
        android:fontFamily="sans-serif"
        android:textSize="11.5sp"
        android:padding="3dp"
        app:layout_constraintTop_toBottomOf="@id/story_show_user"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/story_show_user"
        app:layout_constraintEnd_toEndOf="@id/story_show_user"/>


</androidx.constraintlayout.widget.ConstraintLayout>